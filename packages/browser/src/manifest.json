{
  "manifest_version": 3,
  "author": "Robert Piosik",
  "name": "Code Web Chat Connector",
  "short_name": "CWC",
  "description": "Connect your editor with free chatbots. Parse websites for context.",
  "version": "1.61.0",
  "homepage_url": "https://github.com/robertpiosik/CodeWebChat",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage", "alarms", "activeTab"],
  "host_permissions": ["http://localhost:55155/", "ws://localhost:55155/"],
  "action": {
    "default_title": "Code Web Chat Connector",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://aistudio.google.com/prompts/new_chat",
        "https://chatgpt.com/*",
        "https://claude.ai/new",
        "https://copilot.microsoft.com/",
        "https://chat.deepseek.com/",
        "https://www.doubao.com/chat/",
        "https://gemini.google.com/app",
        "https://gemini.google.com/u/*/app",
        "https://github.com/copilot",
        "https://grok.com/",
        "https://huggingface.co/chat/",
        "https://www.kimi.com/",
        "https://agent.minimax.io/",
        "https://chat.mistral.ai/chat",
        "http://openwebui/",
        "https://openrouter.ai/chat*",
        "https://www.perplexity.ai/*",
        "https://chat.qwen.ai/",
        "https://chat.together.ai/",
        "https://yuanbao.tencent.com/chat*",
        "https://chat.z.ai/",
        "http://localhost/"
      ],
      "js": ["send-prompt-content-script.js"]
    }
  ]
}
